{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "media",
      "previewPath": "'media'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "publishedAt",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "name": "dateAdded",
          "type": "datetime",
          "default": "{{now}}"
        },
        {
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "name": "poster",
          "type": "string",
          "single": true
        },
        {
          "name": "localImages",
          "type": "boolean",
          "required": true
        },
        {
          "name": "duration",
          "type": "string",
          "single": true
        },
        {
          "name": "privacyStatus",
          "type": "string",
          "single": true
        },
        {
          "name": "videoUrl",
          "type": "string",
          "single": true
        },
        {
          "name": "tags",
          "type": "tags"
        },
        {
          "name": "categories",
          "type": "categories"
        },
        {
          "name": "speakers",
          "type": "taxonomy",
          "taxonomyId": "speakers"
        },
        {
          "name": "draft",
          "type": "draft",
          "required": true
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "media",
      "path": "[[workspace]]/src/content/media"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.taxonomy.customTaxonomy": [
    { "id": "speakers", "options": ["Unsorted"] }
  ]
}
