---
// src/components/episodes/EpisodeGrid.astro
import type { CollectionEntry } from "astro:content";
import EpisodeRow from './EpisodeRow.astro';

type Episode = CollectionEntry<"podcast">;

export interface Props {
  episodes: Episode[];
  class?: string;
}

const { episodes, class: className = '' } = Astro.props;
---

<div class={`episodes-grid-wrapper ${className}`}>
  <div class="episodes-grid">
    <div class="episodes-grid-header">Episode</div>

    {episodes.map((episode, index) => (
      <EpisodeRow 
        episode={episode} 
        index={index}
      />
    ))}
  </div>
</div>

<style>
  .episodes-grid-wrapper {
    border-radius: 0;
  }

  .episodes-grid {
    display: grid;
    column-gap: 0;
    grid-template-columns: 1fr;
  }

  .episodes-grid-header {
    padding: 8px 0px;
    font-weight: 600;
    color: #e5e7eb;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid var(--hr);
  }
</style>