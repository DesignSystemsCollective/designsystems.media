---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { formatDuration } from "../utils/formatDuration";

type Media = CollectionEntry<"podcast">;
type Props = Media["data"] & { slug?: Media["slug"] };

const { title, publishedAt, duration, image, slug, hasEpisodeImage, showSlug,podcastTitle } = Astro.props;

const showImages = import.meta.glob('/src/content/show/*/poster.jpg', { eager: true, 
  as: 'url'  });

// Then in your image loading logic
let imageToUse;

if (hasEpisodeImage === false && showSlug) {
  // Try to load show poster using glob pattern
  const showImagePath = `/src/content/show/${showSlug}/poster.jpg`;
  const showImage = showImages[showImagePath];
  
  console.log('Looking for:', showImagePath);
  console.log('Found:', showImage);
  
  if (showImage) {
    // With the new query: '?url', import: 'default' syntax, the image should be directly accessible
    imageToUse = showImage;
  }
} else if (hasEpisodeImage === true && image) {
  imageToUse = image;
}
---

<div class="media-item">
  <a href={`/podcast/${slug}/`} class="media-link">
    <div class="media-image">
  <img src={imageToUse} alt={`${podcastTitle} artwork`} />
      {duration && <div class="duration">{formatDuration(duration)}</div>}
    </div>
    <div class="media-content">
      <h3 class="title">{title}</h3>
      <span class="date">
        <FormattedDate date={publishedAt} />
      </span>
    </div>
  </a>
</div>

<style>
  /* Style for each media item */
  .media-item {
    margin: 0;
  }
  .media-link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .media-image {
    max-width: 100%;
    height: auto;
    aspect-ratio: auto 1/1;
    overflow: hidden;
    position: relative;
    border-radius: 4px;
    background-color: rgba(0, 0, 0, 0.2);
  }

  .media-image img {
    width: 100%;
    height: 100%;
    aspect-ratio: auto 1/1;
    object-fit: cover;
  }

  .title {
    font-size: 16px;
    font-weight: 400;
    margin: 2px 0;
  }

  .date {
    font-size: 14px;
    color: var(--tx-2);
  }
  .duration {
    font-variant: small-caps;
    position: absolute;
    display: inline-block;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    box-sizing: border-box;
    line-height: 1em;
    padding: 0.5em 0.5em 0.35em;
    border-radius: 0.4em;
    letter-spacing: 0.05em;

    font-size: 0.8rem;
    bottom: 0.5rem;
    right: 0.5rem;
  }

  @media screen and (max-width: 768px) {
    .media-link {
      display: grid;
      grid-template-columns: 2fr 3fr;
    }

    .media-image {
      border-radius: 2px;
    }

    .duration {
      bottom: 0.4rem;
      right: 0.4rem;
      font-size: 0.7rem;
    }
  }
</style>
