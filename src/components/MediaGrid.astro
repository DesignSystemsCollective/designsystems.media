---
import ResponsiveGrid from "../layouts/ResponsiveGrid.astro";
import VideoCard from "./VideoCard.astro";

const { media, layoutType = "grid" } = Astro.props;
---

<ResponsiveGrid gridItemMinWidth="600px" gridType="grid">
  {
    media.map((media) => (
      <VideoCard
        title={media.data.title}
        poster={media.data.poster}
        duration={media.data.duration}
        slug={media.slug}
        publishedAt={media.data.publishedAt}  
        layoutType={layoutType}
      />
    ))
  }
</ResponsiveGrid>
