---
// src/components/media/MetaList.astro
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`meta-data ${className}`}>
  <slot />
</div>

<style>
  .meta-data {
    color: var(--meta-data);
    padding: 1rem 0em;
    padding-left: 1.8rem;
    display: inline-flex;
    flex-wrap: wrap;
    flex-direction: column;
    gap: 1rem 0;
    font-size: 1.1rem;
    border-bottom: 1px solid var(--hr);
    justify-content: baseline;
  }

  .meta-data :global(a) {
    color: var(--meta-data-link);
  }

  .meta-data :global(a:hover) {
    color: var(--accent-hover);
  }

  .meta-data :global(span) {
    color: var(--meta-data);
  }

  .meta-data :global([data-icon]) {
    margin-right: 0.25em;
    position: absolute;
    transform: translateX(-1.8rem);
  }

  .meta-data :global(span.inline [data-icon]) {
    margin-top: 0.2em;
  }

  @media screen and (max-width: 1024px) {
    .meta-data {
      padding-left: 0;
      flex-direction: row;
      gap: 0em 2rem;
    }

    .meta-data :global([data-icon]) {
      position: relative;
      transform: translateX(0);
    }

    .meta-data :global(.inline) {
      margin-block-start: 0.5em;
    }

    .meta-data :global(.break) {
      flex-basis: 100%;
      height: 0;
      display: block;
    }
  }

  /* Break element - hidden by default, shown on mobile */
  :global(.break) {
    display: none;
  }
</style>