---
// src/components/media/Hero.astro
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import MediaImage from "./MediaImage.astro";
import Title from "../Title.astro";
import { convertToSlug } from "../../utils/convertToSlug";
import type { HeroProps } from "../../types/components";
import type { ImageType } from "../../types/media";
import { IMAGE_WIDTHS, IMAGE_SIZES } from "../../utils/imageSizes";

export type Props = HeroProps;

const {
  title,
  image,
  showSlug,
  audioUrl,
  podcastTitle,
  hasEpisodeImage,
  showArtwork = true,
  speakers,
} = Astro.props;

// Check for autoplay URL parameter
const url = new URL(Astro.request.url);
const shouldAutoplay =
  url.searchParams.has("autoplay");

function getAudioMimeType(url) {
  if (!url) return "audio/mpeg"; // fallback if no URL

  const extension = url.split(".").pop().toLowerCase();

  const mimeTypes = {
    mp3: "audio/mpeg",
    wav: "audio/wav",
    ogg: "audio/ogg",
    oga: "audio/ogg",
    m4a: "audio/mp4",
    aac: "audio/aac",
    flac: "audio/flac",
    webm: "audio/webm",
  };

  return mimeTypes[extension] || "audio/mpeg";
}

const showImages = import.meta.glob("/src/content/show/*/poster.jpg", {
  eager: true,
});

// Image loading logic
let imageToUse: ImageMetadata | string | undefined;
let backgroundImageUrl: string | undefined;

if (hasEpisodeImage === undefined) {
  // This is a show page - just use the image directly
  imageToUse = image;
  backgroundImageUrl = image?.src;
} else {
  // This is an episode page
  if (hasEpisodeImage === true && image) {
    // Use episode image if it exists
    imageToUse = image;
    backgroundImageUrl = typeof image === 'string' ? image : image?.src;
  } else {
    // Fall back to show poster
    const showImagePath = `/src/content/show/${showSlug}/poster.jpg`;
    const showImage = showImages[showImagePath] as ImageType;
    if (showImage?.default) {
      imageToUse = showImage.default;
      backgroundImageUrl = showImage.default.src;
    }
  }
}

const isImageMetadata = imageToUse && typeof imageToUse === 'object' && 'src' in imageToUse;
---

<div class="hero-image">
  <div class="show-container">
    {
      showArtwork && imageToUse && (
        isImageMetadata ? (
          <Image
            src={imageToUse as ImageMetadata}
            alt={title}
            widths={[...IMAGE_WIDTHS.medium]}
            sizes={IMAGE_SIZES.artwork}
            loading="lazy"
            class="podcast-artwork"
          />
        ) : (
          <MediaImage
            src={imageToUse as string}
            alt={title}
            size="large"
            class="podcast-artwork"
            duration=""
            showDuration={false}
          />
        )
      )
    }
  </div>

  <div class="page-title">
    <Title data-pagefind-meta="title">{title}</Title>
    {
      showSlug ? (
        <a
          href={`/show/${showSlug}/`}
          class="show"
          data-pagefind-filter="show"
          data-pagefind-weight="5"
        >
          {podcastTitle}
        </a>
      ) : (
        // Otherwise (if showSlug does NOT exist)
        <>
          {" "}
          {/* Use a fragment to group the speakers content */}
          {speakers && speakers.length > 0 && (
            <div class="speakers-container">
              {speakers.map((speaker, index) => (
                <>
                  <a
                    href={`/speakers/${convertToSlug(speaker)}/`}
                    class="speaker"
                    data-pagefind-filter="speaker"
                    data-pagefind-weight="5"
                  >
                    {speaker}
                  </a>
                  {/* Add a comma if it's not the last item */}
                  {index < speakers.length - 1 && ", "}
                </>
              ))}
            </div>
          )}
        </>
      )
    }
  </div>

  {
    audioUrl && (
      <audio
        controls
        preload="metadata"
        class="audio-embed"
        autoplay={shouldAutoplay}
      >
        <source src={audioUrl} type={getAudioMimeType(audioUrl)} />
        Your browser does not support the audio element.
      </audio>
    )
  }
</div>
<div class="background" style={`background-image: url('${backgroundImageUrl}')`}>
  <div class="scrim"></div>
</div>

{shouldAutoplay && (
  <script>
    // Additional JavaScript to ensure autoplay works
    document.addEventListener('DOMContentLoaded', function() {
      const audio = document.getElementById('podcast-audio') as HTMLAudioElement;
      if (audio) {
        // Some browsers require user interaction first, so we try to play
        // and handle any potential errors gracefully
        audio.play().catch(function(error) {
          console.log('Autoplay was prevented:', error);
          // You could show a play button or notification here
        });
      }
    });
  </script>
)}

<style>
  .hero-image {
    position: relative;
    width: 100vw;
    overflow: hidden;
    height: auto;
    margin: 0 -1.5rem 0rem -1.5rem;
    padding: 2rem 1rem 0;
    min-height: 300px;
    z-index: 10;
  }
  .background {
    position: absolute;
    top: 0rem;
    left: 0;
    right: 0;
    z-index: 0;
    background-size: cover;
    background-position: center bottom;
    opacity: 1;
    overflow: hidden;
    min-height: 55vh;
    max-height: 700px;
  }
  .background::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(4rem);
  }
  .scrim {
    content: "";
    z-index: 2;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0;
    top: 0;
    background: var(--scrim-gradient);
  }

  .show-container {
    position: relative;
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    min-height: 250px;
    gap: 1.5rem;

    img {

    box-shadow: 0 10px 30px var(--accent-glow);
    border-radius: 6px;
    overflow: hidden;
    }
  }

  .page-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0rem;
  }
  h1.title {
    padding: 1rem 0 0;
  }
  .page-title .show {
    font-weight: 600;
  }
  .speakers-container a {
    font-weight: 600;
  }
  audio {
    position: relative;
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 1.5rem auto;
  }
  .audio-embed {
    width: 100%;
    max-width: 900px;
    height: 54px;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }
  .audio-embed::-webkit-media-controls-panel {
    background-color: rgba(255, 255, 255, 0.1);
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @media screen and (max-width: 1024px) {
    .hero-image {
      height: auto;
      margin: 0;
    }

    .show-container {
      padding: 1.5rem;
      min-height: 200px;
    }

    .background {
      height: 320px;
    }
  }
</style>
