---
// src/components/media/MetaItem.astro
import { Icon } from "astro-icon/components";

export interface Props {
  icon?: string;
  iconSize?: number;
  label?: string;
  type?: 'inline' | 'block';
  class?: string;
}

const { 
  icon, 
  iconSize = 20, 
  label, 
  type = 'inline', 
  class: className = '' 
} = Astro.props;
---

<div class={`meta-item ${type} ${className}`}>
  {icon && <Icon name={icon} size={iconSize} />}
  {label && <span class="meta-label">{label}</span>}
  <div class="meta-content">
    <slot />
  </div>
</div>

<style>
  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.25em;
  }

  .meta-item.inline {
    display: inline-flex;
    align-items: baseline;
  }

  .meta-item.block {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5em;
  }

  .meta-label {
    font-weight: 500;
  }

  .meta-content {
    display: contents;
  }

  /* Special styling for explicit badge */
  .meta-item :global(.explicit) {
    background: var(--accent);
    color: white;
    padding: 0.2em 0.5em;
    border-radius: 4px;
    font-size: 0.8em;
    font-weight: 600;
    text-transform: uppercase;
  }
</style>