---
// src/components/media/MediaImage.astro
export interface Props {
  src?: string;
  alt: string;
  size?: 'small' | 'medium' | 'large' | 'thumbnail';
  class?: string;
}

const { src, alt, size = 'medium', class: className = '' } = Astro.props;
---

<div class={`media-image ${size} ${className}`}>
  <img src={src} alt={alt} />
</div>

<style>
  .media-image {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .media-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Size variants */
  .media-image.thumbnail {
    width: 70px;
    height: 70px;
  }

  .media-image.small {
    width: 80px;
    height: 80px;
  }

  .media-image.medium {
    width: 120px;
    height: 120px;
  }

  .media-image.large {
    width: 200px;
    height: 200px;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  /* Special class for podcast artwork in hero */
  .podcast-artwork {
    width: 200px;
    height: 200px;
  }

  @media screen and (max-width: 1024px) {
    .podcast-artwork {
      width: 150px;
      height: 150px;
    }
  }
</style>