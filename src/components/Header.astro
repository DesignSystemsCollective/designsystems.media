---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { Icon } from "astro-icon";
---

<header>
  <nav>
    <h2>
      <a href="/" title="{SITE_TITLE}"
        ><Icon name="carbon:media-library-filled" class="logo" size="32" />
        <span>{SITE_TITLE}</span></a
      >
    </h2>
    <!-- <div class="internal-links">
      <HeaderLink href="/about">About</HeaderLink>
    </div> -->

    <div class="social-links">
      <HeaderLink href="/about">About</HeaderLink>
      <a
        href="https://twitter.com/designsysmedia"
        target="_blank"
        title="@designsysmedia"
      >
        <span class="sr-only">Follow DesignSystems.media on Twitter</span>
        <svg
          viewBox="0 0 16 16"
          aria-hidden="true"
          width="32"
          height="32"
          astro-icon="social/twitter"
          ><path
            fill="currentColor"
            d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
          ></path></svg
        >
      </a>
      <ThemeToggle />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    box-shadow: 0 2px 8px rgba(var(--shadow), 8%);
    border-bottom: 1px solid var(--hr);
    background: var(--header-background);
    z-index: 100;
    position: relative;
    height: var(--header-height);
  }

  h2 {
    margin: 0;
    padding: 0;
    font-size: 0.9em;
    font-weight: 400;
  }

  h2 a [astro-icon] {
    margin-right: 0.5rem;
  }

  h2 a:hover [astro-icon] {
    color: var(--interactive);
    /* OR */
    fill: var(--interactive);
  }

  h2 a,
  h2 a.active {
    color: var(--header-text);
    text-decoration: none;
    padding: 0;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--header-text);
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
  }
  nav h2 a {
    padding: 0;
    display: flex;
    align-items: center;
    font-weight: 700;
  }
  .social-links,
  .social-links a {
    display: flex;
    align-items: center;
    font-size: 0.9em;
  }
</style>
