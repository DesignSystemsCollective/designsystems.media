  <style>
    @media screen and (max-width: 375px) {
      .logo {
        width: 48px;
        height: 48px;
      }
      .logoTitle {
        display: none;
      }
    }
    header {
      margin: 0;
      padding: 0 1em;
      box-shadow: 0 2px 8px rgba(var(--shadow), 8%);
      border-bottom: 1px solid var(--hr);
      background: var(--header-background);
      z-index: 100;
      position: relative;
      height: var(--header-height);
    }

    h2 {
      margin: 0;
      padding: 0;
      font-size: 0.9em;
      font-weight: 400;
    }

    h2 a svg {
      margin-right: 0.5rem;
      margin-bottom: 0.2rem;
    }

    h2 a,
    h2 a.active {
      color: var(--header-text);
      text-decoration: none;
      padding: 0;
    }
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: var(--header-height);
      margin: 0 auto;
    }
    nav a {
      padding: 1em 0.5em;
      color: var(--header-text);
      text-decoration: none;
    }
    nav a.active {
      text-decoration: none;
    }
    nav h2 a {
      padding: 0;
      display: flex;
      align-items: center;
      font-weight: 700;
    }
    .social-links,
    .social-links a {
      display: flex;
      align-items: center;
      font-size: 0.9em;
    }
  </style>
</header>
