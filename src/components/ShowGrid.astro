---
import ResponsiveGrid from "../layouts/ResponsiveGrid.astro";
import ShowCard from "./ShowCard.astro";

const { media } = Astro.props;
---

<ResponsiveGrid gridColumnCount={6} gridItemMinWidth="200px">
  {
    media.map((media) => (
      <ShowCard
        title={media.data.title}
        image={media.data.image}
        slug={media.slug}
        episodeCount={media.data.episodeCount}
        speakers={media.data.speakers}
        lastUpdate={media.data.lastUpdate}
      />
    ))
  }
</ResponsiveGrid>
