---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import MediaImage from "./media/MediaImage.astro";

type Media = CollectionEntry<"media">;
type Props = Media["data"] & { slug?: Media["slug"] };

const { title, publishedAt, duration, poster, slug } = Astro.props;
---

<div class="media-item">
  <a href={`/video/${slug}/`} class="media-link">
    <MediaImage
      src={poster.src}
      alt={title}
      duration={duration}
      ratio="video"
    />
    <div class="media-content">
      <h3 class="title">{title}</h3>
      <span class="date">
        <FormattedDate date={publishedAt} />
      </span>
    </div>
  </a>
</div>

<style>
  /* Style for each media item */
  .media-item {
    margin: 0;
  }
  .media-link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: box-shadow 1s ease-out;
  }

  .media-link:hover {
    .media-image img {
      box-shadow:
        0 0px 40px var(--accent-glow),
        0 0px 10px var(--accent-hover);
      outline: 1px solid var(--accent-hover);
      transition: box-shadow 1s ease-out;
    }
    .title {
      color: var(--accent);
    }
  }

  .title {
    font-size: 16px;
    font-weight: 400;
    margin: 2px 0;
  }

  .date {
    font-size: 13px;
    color: var(--tx-3);
  }
  .duration {
    font-variant: small-caps;
    position: absolute;
    display: inline-block;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    box-sizing: border-box;
    line-height: 1em;
    padding: 0.5em 0.5em 0.35em;
    border-radius: 0.4em;
    letter-spacing: 0.05em;

    font-size: 0.8rem;
    bottom: 0.5rem;
    right: 0.5rem;
  }

  @media screen and (max-width: 768px) {
    .media-link {
      display: grid;
      grid-template-columns: 2fr 3fr;
    }

    .media-image {
      border-radius: 2px;
    }

    .duration {
      bottom: 0.4rem;
      right: 0.4rem;
      font-size: 0.7rem;
    }
  }
</style>
