---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const allPosts = await getCollection('media');

// Filter posts with non-empty tags
const filteredPosts = allPosts.filter((post) => post.data.tags && post.data.tags.length > 0);

const tags = [...new Set(filteredPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="fade">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
       .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
      
      /* Mobile layout - 1 column */
      .media-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
      }

      /* Tablet layout - 2 columns */
      @media screen and (min-width: 768px) {
        .media-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      /* Larger screens - 3 columns */
      @media screen and (min-width: 1024px) {
        .media-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      /* Style for each media item */
      .media-item {
        margin: 0;
      }

      .media-link {
        text-decoration: none;
      }

      .media-content {
      }

      .media-image {
        max-width: 100%;
        height: auto;
        aspect-ratio: auto 16/9;
        overflow: hidden;
        object-fit: cover;
      }
      .media-image img {
        width: 100%;
        height: 100%;
        aspect-ratio: auto 16/9;
        object-fit: cover;
      }

      .title {
        font-size: 16px;
        margin: 10px 0;
      }

      .date {
        font-size: 14px;
        color: #888;
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main transition:animate="fade">
      <section>
        <div class="tags">
    {tags.map((tag) => (
      <p class="tag">{tag}</p>
    ))}
  </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
