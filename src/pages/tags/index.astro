---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const allPosts = await getCollection("media");

// Filter posts with non-empty tags
const filteredPosts = allPosts.filter(
  (post) => post.data.tags && post.data.tags.length > 0
);

const tags = [...new Set(filteredPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="fade">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .tags {
        display: flex;
        flex-wrap: wrap;
        list-style-type: none;
        padding: 0;
      }

      .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main transition:animate="fade">
      <section>
        <ul class="tags">
          {
            tags.map((tag) => (
              <li>
                <a href={`/tags/${tag}`} class="tag">
                  {tag}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
