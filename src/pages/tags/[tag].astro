---
import { getCollection } from "astro:content";
import VideoCard from "../../components/VideoCard.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

import { Icon } from "astro-icon";
import MediaGrid from "../../layouts/MediaGrid.astro";
export async function getStaticPaths() {
  const allPosts = await getCollection("media");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    if (!tag) return;
    const filteredPosts = allPosts.filter((post) => {
      return !post.data.draft && post.data.tags?.includes(tag);
    });
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

// TODO: How to get the results sorting by date order?

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }

  h2 {
    margin-block: 0 2rem;
  }
  .breadcrumb {
    text-decoration: none;
  }
  .breadcrumb:hover {
    text-decoration: underline;
  }
  .breadcrumb [astro-icon] {
    position: relative;
    top: 0.2em;
    margin-right: 0.25em;
    color: var(--tagCount-icon);
  }

  @media (max-width: 720px) {
    h2 {
      padding: 1rem;
      margin: 1rem 0 0;
    }
  }
</style>

<BaseLayout sidebar={true} baseHeadProps={{ title: tag }}>
  <a href="/tags" class="breadcrumb"
    ><Icon name="fluent:tag-20-filled" size="20" />Tags</a
  >
  <h2>{tag}</h2>

  <MediaGrid>
    {
      posts.map((post) => (
        <VideoCard
          title={post.data.title}
          poster={post.data.poster}
          duration={post.data.duration}
          slug={post.slug}
          publishedAt={post.data.publishedAt}
        />
      ))
    }
  </MediaGrid>
</BaseLayout>
