---
import PodcastGrid from "../../components/PodcastGrid.astro";
import ShowGrid from "../../components/ShowGrid.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { allPodcastsFilteredAndSorted, allShows } from "../../utils/mediaCollection";

const podcast = allPodcastsFilteredAndSorted;
const shows = allShows.slice(0, 4);
---

<BaseLayout sidebar={false} metadataProps={{ title: "All podcasts" }}>
  <SectionHeader
    title="Podcasts"
    link="/show/"
    linkLabel="All podcasts"
    padding={true}
  />
  <ShowGrid media={shows} /> 
  <SectionHeader
    title="Latest podcast episodes"
    padding={true}
  />
  <PodcastGrid media={podcast} />
</BaseLayout>
