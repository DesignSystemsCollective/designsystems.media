---
import PodcastGrid from "../../components/PodcastGrid.astro";
import ShowGrid from "../../components/ShowGrid.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { allPodcastsFilteredAndSorted, allShowsSortedByRecentEpisode } from "../../utils/mediaCollection";

const podcast = allPodcastsFilteredAndSorted.slice(0, 8);
const shows = allShowsSortedByRecentEpisode.slice(0, 6);
---

<BaseLayout sidebar={false} metadataProps={{ title: "All podcasts" }}>
  <div class="show"><SectionHeader
    title="Podcasts"
    link="/show/"
    linkLabel="All podcasts"
    padding={true}
  />
  <ShowGrid media={shows} /></div>
  <SectionHeader
    title="Latest podcast episodes"
    padding={true}
  />
  <PodcastGrid media={podcast} />
</BaseLayout>
<style>
  .show {
    margin-bottom: 2rem;
  }
</style>