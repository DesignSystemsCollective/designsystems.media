---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

import { getCollection } from "astro:content";

const media = (await getCollection("media")).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);
---

<style>
  /* Mobile layout - 1 column */
  .media-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  /* Tablet layout - 2 columns */
  @media screen and (min-width: 768px) {
    .media-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Larger screens - 3 columns */
  @media screen and (min-width: 1024px) {
    .media-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Style for each media item */
  .media-item {
    margin: 0;
  }

  .media-link {
    text-decoration: none;
  }

  .media-content {
  }

  .media-image {
    max-width: 100%;
    height: auto;
  }

  .title {
    font-size: 16px;
    margin: 10px 0;
  }

  .date {
    font-size: 14px;
    color: #888;
  }
</style>

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <section>
        <div class="media-grid">
          {
            media.map((media) => (
              <div key={media.data.id} class="media-item">
                <a href={media.data.videoUrl} class="media-link">
                  <div class="media-content">
                    <img
                      width={720}
                      height={360}
                      src={media.data.image}
                      alt=""
                      className="media-image"
                    />
                    <h4 class="title">{media.data.title}</h4>
                    <p class="date">
                      <FormattedDate date={media.data.publishedAt} />
                    </p>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
