---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { ViewTransitions } from "astro:transitions";

const media = (await getCollection("media")).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

    <style>
      /* Mobile layout - 1 column */
      .media-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
      }

      /* Tablet layout - 2 columns */
      @media screen and (min-width: 768px) {
        .media-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      /* Larger screens - 3 columns */
      @media screen and (min-width: 1024px) {
        .media-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      /* Style for each media item */
      .media-item {
        margin: 0;
      }

      .media-link {
        text-decoration: none;
      }

      .media-content {
      }

      .media-image {
        max-width: 100%;
        height: auto;
        aspect-ratio: auto 16/9;
        overflow: hidden;

        object-fit: cover;
      }
      .media-image img {
        width: 100%;
        height: 100%;
        aspect-ratio: auto 16/9;
        object-fit: cover;
      }

      .title {
        font-size: 16px;
        margin: 10px 0;
      }

      .date {
        font-size: 14px;
        color: #888;
      }
    </style>
    <ViewTransitions />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <section>
        <div class="media-grid">
          {
            media.map((media) => (
              <div class="media-item">
                <a href={`/${media.slug}`} class="media-link">
                  <div class="media-content">
                    <div class="media-image">
                      <img
                        width={720}
                        src={media.data.image}
                        alt={media.data.title}
                        class=""
                        transition:name={media.slug}
                      />
                    </div>
                    <h4 class="title">{media.data.title}</h4>
                    <p class="date">
                      <FormattedDate date={media.data.publishedAt} />
                    </p>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
