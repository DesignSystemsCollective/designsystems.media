---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const allPosts = await getCollection("media");

// Filter posts with non-empty speakers
const filteredPosts = allPosts.filter(
  (post) => post.data.speakers && post.data.speakers.length > 0
);

const speakers = [
  ...new Set(filteredPosts.map((post) => post.data.speakers).flat()),
];
const pageTitle = "Speaker Index";
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="fade">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .speakers {
        display: flex;

        list-style-type: none;
        padding: 0;
      }

      .speakers li {
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em 0.25em;
        margin: 0.25em;
      }

      .speaker {
        font-size: 1.15em;
        background-color: #f8fcfd;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main transition:animate="fade">
      <section>
        <ul class="speakers">
          {
            speakers.map((speaker) => (
              <li>
                <a href={`/speakers/${speaker}`} class="speaker">
                  {speaker}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
