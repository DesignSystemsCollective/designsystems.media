---
import { YouTube } from "@astro-community/astro-embed-youtube";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"media">["data"];

import { fade } from 'astro:transitions';
const { title, description, publishedAt, updatedDate, image, videoUrl } =
  Astro.props;

const currentPath = Astro.url.pathname;
  const transitionName = currentPath.slice(1);

---

<html lang="en" transition:name="root" transition:animate="fade">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
        display: flex;
        justify-content: center;
      }
      .hero-image-behind {
        position: absolute;
        z-index: 1;
      max-width: 720px;
      aspect-ratio: 16/9;
      }
      .hero-image .video-wrapper {
        position: relative;
        z-index: 2;
      display:block;
      min-height:405px;
      max-width: 720px;
      aspect-ratio: 16/9;
      }
      .hero-image .video-embed {
        border-radius: 12px;
        box-shadow: var(--box-shadow);
        
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>


  </head>

  <body>
    <Header />
    <main>
      <article>
     
        <div class="hero-image"> {image && <img width={1020} height={510} src={image} alt={title} class="hero-image-behind"
                       transition:name={transitionName} />}
         <div class="video-wrapper"><YouTube id={videoUrl ?? ""} class="video-embed"  transition:animate={fade({ duration: '1.5s' })} /></div>
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={publishedAt} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
